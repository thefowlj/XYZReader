<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardview_margins"
    android:layout_marginRight="@dimen/cardview_margins"
    android:layout_marginTop="@dimen/cardview_margins"
    android:layout_marginBottom="@dimen/cardview_margins"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:id="@+id/list_item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_min_height"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_title_padding"
            android:paddingTop="@dimen/list_title_padding"
            android:paddingRight="@dimen/list_title_padding"
            android:paddingBottom="@dimen/cardview_margins"
            android:textColor="@color/grey_900"
            android:ellipsize="end"
            android:maxLines="@integer/list_title_max_lines" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_title_padding"
            android:paddingRight="@dimen/list_title_padding"
            android:paddingBottom="@dimen/list_title_padding"
            android:textColor="@color/grey_700"
            android:maxLines="@integer/list_title_max_lines"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
